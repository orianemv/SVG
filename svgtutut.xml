<path id="chemin" d="M 10,150q50,-60 90,0t90,0t90,0"/>
<g>
	<image xlink:href="animtutut.png" height="500px" width="200px"/>
	<line x1="0" y1="0" x2="0" y2="12"/>
	<circle cx="0" cy="18" r="6"/>

	<animateMotion begin="1s" dur="10s" repeatDur="indefinite">
		<mpath xlink:href="#chemin"/>
	</animateMotion>
</g>
</svg>

