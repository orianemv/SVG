<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/css" href="style.css" charset="utf-8"?>


<svg width="100%" height="100%" xml:lang="fr"
	xmlns="http://www.w3.org/2000/svg"
	xmlns:xlink="http://www.w3.org/1999/xlink">

   <title>Le tutut</title>
<!--    <desc>Un carré animé en SVG</desc>
 -->

<rect width="100" height="50">
	<animate attributeName="width" attributeType="XML"
    	fill="freeze"
    	from="0" to="800"
    	begin="2s" dur="6s"/>
</rect>

<circle id="cercle" cx="200" cy="150" r="10">
	<animate attributeName="r" attributeType="XML" id="gros"
		from="10" to="100"
		begin="2s" dur="7s" fill="freeze"/>
	<animate attributeName="stroke-width" attributeType="CSS"
		from="1" to="20"
		begin="gros.begin" dur="7s" fill="freeze"/>
	<animate attributeName="stroke-opacity" attributeType="CSS"
		from="1" to="0"
		begin="gros.end" dur="3s" fill="freeze"/>
</circle>

